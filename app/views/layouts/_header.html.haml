%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "Logo", root_path, id: "logo" 
      %nav
      %ul.nav.pull-right
        %li= link_to "Help", help_path
        - unless @current_user
          %li
            = link_to(:controller => "account", :action => "login") do
              Login
        - if @current_user
          %li
            = link_to "Betas", betas_path
          %li
            = link_to "Users", users_path
          %li
            = link_to(:controller => "account", :action => "logout") do
              Log out
              = @current_user.name

