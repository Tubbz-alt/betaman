%h1 Listing betas for admin

%table.table.table-bordered
  %tr
    %th Name
    %th Begin
    %th End
    %th Users
    - if @current_user.admin?
      %th Actions

  - @betas.each do |beta|
    %tr
      %td{:width => '50%'}= link_to(beta.name, beta ) 
      %td= beta.begin
      %td= beta.end
      %td
        = link_to(beta_users_path(beta)) do
          =beta.users.count
          - if beta.users.count > 0
            %i.icon-eye-open
      - if @current_user.admin?
        %td
          = link_to(beta_path(beta), :title => 'Edit') do
            %i{:class => ['icon-red', 'icon-pencil']}
          = link_to(beta, :title => 'Delete', :method => :delete, :data => { :confirm => 'Are you sure?' }) do
            %i.icon-trash
