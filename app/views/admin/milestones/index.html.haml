%h4 Milestones

- if @current_user.admin?
  = link_to new_admin_milestone_path, class: 'btn btn-mini btn-success ' do
    %i.icon-plus
    Create milestone
  %br
  %br

%table.table.table-bordered
  %tr
    %th Name
    %th Date
    %th Betas
    %th Actions

  - @milestones.each do |ms|
    %tr
      %td= link_to ms.name, edit_admin_milestone_path(ms)
      %td= ms.date
      %td
        %table
          - ms.betas.each do |beta|
            %tr
              %td= link_to beta.name, beta_path(beta)
      %td
        = link_to(edit_admin_milestone_path(ms)) do
          .i.icon-pencil
        = link_to(admin_milestone_path(ms), :title => 'Delete', :method => :delete, :data => { :confirm => 'Are you sure?' }) do
          .i.icon-trash
