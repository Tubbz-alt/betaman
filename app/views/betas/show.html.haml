=link_to "Beta: #{@beta.name}", beta_path(@beta), class: 'btn'

%table{width: "100%"}
  %tr
    %td.right.bold.top
      Time:
    %td
      = @beta.begin 
      to
      = @beta.end

  %tr
    %td.right.bold.top Participants:
    %td
      = link_to "#{@users.count} total", beta_users_path(@beta)
  %tr
    %td
    %td
      = link_to "#{pluralize(@users.external.count, 'external')}", beta_users_external_path(@beta)
  %tr
    %td
    %td= "#{pluralize(@users.employees.count, 'employee')}"
  -#%tr
    %td
    %td
      = "#{pluralize(@users.testers.count, 'tester')}"
  %tr
    %td
    %td="#{pluralize(@users.admins.count, 'admin')}"

  %tr
    %td.right.bold.top
      Mailing list:
    %td
      - if @beta.list
        = link_to @beta.list.name, list_path(@beta.list)
        - if @current_user.admin?
          = link_to(beta_remove_list_path(@beta)) do
            %i.icon-trash
      - else
        - if @current_user.admin?
          .btn-group
            %a{:class => "btn btn-mini dropdown-toggle", "data-toggle" => "dropdown", :href => "#"}
              Add list
              %b.caret
            %ul.dropdown-menu
              - List.all.each do |list|
                %li= link_to list.name, beta_add_list_path(@beta, list_id: list.id)

  %tr
    %td.right.bold.top
      Milestones:
    %td
      - if !@milestones.empty?
        %table
          - @milestones.each do |milestone|
            %tr
              - if @current_user.admin?
                %td
                  %b
                    = link_to "#{milestone.date.to_s}: ", edit_admin_milestone_path(milestone) 
                %td
                  %b= link_to milestone.name, edit_admin_milestone_path(milestone)
              - else  
                %td{style: "white-space:nowrap" }
                  %b= "#{milestone.date.to_s}: "
                %td
                  %b= milestone.name

            -if !milestone.url.blank?
              %tr
                %td
                %td= link_to milestone.url, milestone.url
            - if !milestone.comment.empty?
              %tr
                %td
                %td
                  %pre= milestone.comment
            -if @current_user.employee? && !milestone.comment_internal.blank?
              %tr
                %td
                %td
                  %pre= milestone.comment_internal
                %td.left.bold.top Confidential!

%div{ class: 'btn-group'}
  - if @current_user.admin?
    = link_to 'Edit', edit_beta_path(@beta),  class: 'btn btn-info' 
  - if @current_user.admin?
    = link_to 'Add participants', beta_add_select_users_path,  class: 'btn btn-info' 
  - if !@beta.users.include?(@current_user)
    = link_to 'Join', beta_add_user_path(@beta, user_id: @current_user), class: 'btn-success' 

