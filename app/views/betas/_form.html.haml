= form_for @beta do |f|
  - if @beta.errors.any?
    #error_explanation
      %h2= "#{pluralize(@beta.errors.count, "error")} prohibited this beta from being saved:"
      %ul
        - @beta.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :begin
    = f.text_field :begin
  .field
    = f.label :end
    = f.text_field :end
  .actions
    = f.submit 'Save'
