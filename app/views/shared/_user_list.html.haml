%table{id: 'users'}
  %thead
    %tr
      %th Name
      %th Email
      %th Company
      %th Betas
      -# if @current_user.admin?
        %th Groups
        %th Actions

  %tbody
    -# @users.each do |user|
      %tr
        %td
          - if @current_user.admin?
            = link_to user.full_name, edit_user_path(user)
          - else
            = link_to user.full_name, user
        %td= mail_to user.email

        - if @current_user.admin?
          %td
            = link_to(user_betas_path(user) ) do
              =user.betas.count
              - if user.betas.count > 0
                %i.icon-eye-open

          %td= user.groups.count

          %td
            = link_to(edit_user_path(user)) do
              .i.icon-pencil
            - if @beta
              = link_to(beta_remove_user_path(@beta, user_id: user) ) do
                .i.icon-trash
            - else
              = link_to(user, :method => :delete, :data => { :confirm => 'Are you sure?' } ) do
                .i.icon-trash

