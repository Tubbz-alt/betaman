%table.table.table-bordered
  %tr
    %th Name
    %th Email
    %th Betas
    - if @current_user.admin?
      %th Actions

  - @users.each do |user|
    %tr
      %td
        - if @current_user.admin?
          = link_to user.full_name, edit_user_path(user)
        - else
          = link_to user.full_name, user
      %td= mail_to user.email
      %td
        = link_to(user_betas_path(user) ) do
          =user.betas.count
          - if user.betas.count > 0
            %i.icon-eye-open
      - if @current_user.admin?
        %td
          = link_to(edit_user_path(user)) do
            .i.icon-pencil
          = link_to(beta_rmuser_path(@beta, user_id: user) ) do
            = #link_to( :controller => 'betas', :action => 'rmuser', :id => @beta.id) do   #link_to(rmuser_betas_path(@beta) ) do #, :data => { :confirm => 'Are you sure?' } ) do
            =@beta.name
            \- remove
            =user.full_name
            .i.icon-trash

