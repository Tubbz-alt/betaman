= form_for @list do |f|
  - if @list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list.errors.count, "error")} prohibited this list from being saved:"
      %ul
        - @list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :server
    = f.text_field :server
  .field
    = f.label 'Password'
    = f.text_field :pass

  .field

  .actions
    = f.submit 'Save', class: 'btn btn-success'


